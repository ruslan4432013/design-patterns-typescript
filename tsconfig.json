{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "Node",
    "rootDir": "./src",
    "outDir": "./build/",
    "strictPropertyInitialization": false,
    "strictNullChecks": true,
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "noImplicitAny": false,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
